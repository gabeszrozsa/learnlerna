{
  "name": "root",
  "version": "0.1.0",
  "devDependencies": {
    "@types/node": "^13.11.1",
    "lerna": "^3.20.2",
    "typescript": "^3.8.3"
  },
  "engines": {
    "node": "12.16.1"
  },
  "scripts": {
    "publish": "lerna run build && lerna publish",
    "dev": "lerna run dev",
    "build": "lerna run build",
    "start": "yarn run scope:serve",
    "postinstall": "yarn run scope:install",
    "heroku-postbuild": "yarn run scope:build",
    "scope:install": "lerna exec --scope '@learnlerna/admin-*' yarn install",
    "scope:build": "lerna run --scope '@learnlerna/admin-*' build",
    "scope:serve": "lerna run --scope '@learnlerna/admin-*' serve"
  }
}
